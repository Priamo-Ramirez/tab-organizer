{
  "manifest_version": 3,
  "name": "Tab Organizer",
  "version": "1.1.0",
  "description": "One-click: organize your open tabs by website (hostname). Keeps pinned tabs in place.",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_title": "Organize tabs by hostname",
    "default_icon": {
      "16": "icons/icon_16.png",
      "32": "icons/icon_32.png",
      "48": "icons/icon_48.png",
      "128": "icons/icon_128.png"
    }
  },
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png",
    "512": "icons/icon_512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+H"
      },
      "description": "Organize tabs by hostname in this window"
    }
  }
}